generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tasks {
  task_id           String   @id @db.Uuid
  user_id           String   @db.Uuid
  description       String
  start_date        DateTime @db.Timestamptz(6)
  end_date          DateTime @db.Timestamptz(6)
  next_notification DateTime @db.Timestamptz(6)
}

model tasks_alerts_history {
  task_alert_id  String   @id @db.Uuid
  task_id        String   @db.Uuid
  user_id        String   @db.Uuid
  alert_datetime DateTime @db.Timestamptz(6)
}

model users {
  user_id            String              @id @db.Uuid
  name               String
  sms_phone_number   String?
  voice_phone_number String?
  email              String?
}
